<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/divider_medium"
    android:showDividers="middle"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/signin_container"
    tools:context="com.philipoy.youtubedl.LaunchActivity">

    <ImageView
        android:id="@+id/signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_big_arrow_right"
		android:contentDescription="@string/app_name"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/signin_label"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_signin"
        android:layout_gravity="center"
        android:textColor="@color/Grey"
        android:textSize="10pt"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/signin_email_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        style="@style/SignInEditText">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/signin_password_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        style="@style/SignInEditText" />

    <Button
        android:id="@+id/signin_signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_signin"
        android:layout_gravity="right"
        style="@style/LargeAllCapsButton" />

    <ProgressBar
        android:id="@+id/signin_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:visibility="invisible" />

</LinearLayout>
